{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "deviceName": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "marketingName": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "manufacturer": {
      "type": "string"
    },
    "brand": {
      "type": "string"
    },
    "display": {
      "type": "object",
      "properties": {
        "width": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ]
        },
        "height": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ]
        },
        "touch": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "type": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "width",
        "height",
        "touch",
        "type"
      ]
    },
    "dualOrientation": {
      "type": "boolean"
    },
    "type": {
      "type": "string"
    }
  },
  "required": [
    "deviceName",
    "marketingName",
    "manufacturer",
    "brand",
    "display",
    "dualOrientation",
    "type"
  ]
}
